<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:paddingLeft = "@dimen/activity_horizontal_margin"
                android:paddingRight = "@dimen/activity_horizontal_margin"
                android:paddingTop = "@dimen/activity_vertical_margin"
                android:paddingBottom = "@dimen/activity_vertical_margin"
                tools:context = ".MainActivity">

    <TextView
            android:text = "@string/hello_world"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content" android:id = "@+id/sensor_value" android:textSize = "50dp"/>
    <SeekBar
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/threshold_bar"
            android:layout_below = "@+id/sensor_value"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" android:max = "200" android:splitTrack = "false"
            android:mirrorForRtl = "false" android:indeterminate = "false" android:progress = "100"/>
    <TextView android:text = "Threshold value: "
              android:layout_width = "wrap_content"
              android:layout_height = "wrap_content"
              android:id = "@+id/threshold_value"
              android:textSize = "20dp"
              android:layout_below = "@+id/threshold_bar"
              android:layout_alignParentLeft = "true"
              android:layout_alignParentStart = "true"/>

</RelativeLayout>
